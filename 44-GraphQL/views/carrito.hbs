<section>
<div>
            <button type="button" onclick=window.location='/'>Home</button>
            <button type="button" onclick=window.location='/accounts/logout'>Log out</button>
            <button type="button" onclick=window.location='/accounts/profile'>Profile</button>            
            <button type="button" onclick=window.location='/carritos/micarrito'>Cart</button>
            <button type="button" onclick=window.location='/compras'>Buy History</button>

    <h1> Welcome, {{ data.username }}</h1>
</div>
</section>
{{#if data.items.[0]}}
<button type="button" onclick=window.location='/compras/nuevacompra'>Comprar carrito</button>

<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
img{
    width:100%;
    max-width:200px;
}
</style>
<table>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Thumbnail</th>
                        <th>Acciones</th>
                    </tr>
                    {{#each data.items}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>${{this.price}}</td>
                            <td><img src={{this.thumbnail}}></td>
                            <td><button onclick="window.location='/carritos/add/{{ this._id }}'">+</button>
                            <button onclick="window.location='/carritos/del/{{ this._id }}'">-</button>
                            </td>
                        </tr>
                    {{/each}}
                </table>
                
{{else}}
<h2>Tu carrito esta vacio!</h2>
{{/if}}